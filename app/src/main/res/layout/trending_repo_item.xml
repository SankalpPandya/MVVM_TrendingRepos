<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground">

    <de.hdodenhof.circleimageview.CircleImageView
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/coverImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFFF" />


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/coverImage"
        app:layout_constraintStart_toEndOf="@id/coverImage"
        android:textSize="15sp"
        android:textColor="#52575C"
        app:layout_constraintBottom_toTopOf="@id/subtext"
        android:ellipsize="end"
        android:layout_marginEnd="16dp"
        android:maxLines="1"
        android:text="" />

    <TextView
        android:id="@+id/subtext"
        android:layout_width="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toEndOf="@id/coverImage"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:textColor="#52575C"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginEnd="16dp"
        android:text="asdasdasdasdasdasdad" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:fontFamily="@font/pingfang_sc_font"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/subtext"
        app:layout_constraintStart_toEndOf="@id/coverImage"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        android:textSize="12sp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaa" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/languageimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/description"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintBottom_toBottomOf="parent"></androidx.appcompat.widget.AppCompatImageView>

    <TextView
        android:id="@+id/language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular_font"
        android:textSize="12sp"
        android:text="1232"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/languageimage" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/starImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/language"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_star_yellow"></androidx.appcompat.widget.AppCompatImageView>

    <TextView
        android:id="@+id/star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular_font"
        android:textSize="12sp"
        android:text="1232"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/starImage" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/forkImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/star"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_fork"></androidx.appcompat.widget.AppCompatImageView>

    <TextView
        android:id="@+id/fork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular_font"
        android:textSize="12sp"
        android:text="1232"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/forkImage"></TextView>

    <androidx.constraintlayout.widget.Group
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="description,fork,forkImage , starImage,languageimage,language,star"
        android:id="@+id/extraInfo" />

</androidx.constraintlayout.widget.ConstraintLayout>